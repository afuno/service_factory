module Servactory
  module Inputs
    module Validations
      class Required < Base
        DEFAULT_MESSAGE: ^(service_class_name: String, input: Input, value: untyped) -> String

        @context: instance
        @input: Input

        def self.check: (context: instance, input: Input, check_key: Symbol, **untyped _) -> void

        def self.should_be_checked_for?: (Input input, Symbol check_key) -> bool

        def initialize: (context: instance, input: Input) -> void

        def check: () -> void

        private

        def collection_valid?: -> bool

        def collection_valid_for?: (values: Array[untyped]) -> bool

        def add_error_with: (String? message) -> void
      end
    end
  end
end
